# Grid Engine software to be configured by Ansible
[setup/gridengine]
provider=ansible
frontend_groups=gridengine_master
compute_groups=gridengine_worker
# Create a cloud provider called "google-cloud"
[cloud/google-cloud]
provider=google
noauth_local_webserver=true
gce_project_id=hpccluster
gce_client_id=XXXXXXXX-XXXXXXXXXXXXXXXX
gce_client_secret=XXXXXXXXXXXX-XXXXXXXXXXXXXXXX
# Create a login called "google-login"
[login/google-login]
image_user=p.greisen
image_user_sudo=root
image_sudo=True
user_key_name=elasticluster
user_key_private=~/.ssh/google_compute_engine
user_key_public=~/.ssh/google_compute_engine.pub
# Bring all of the elements together to define a cluster called "gridengine"
[cluster/gridengine]
cloud=google-cloud
login=google-login
setup=gridengine
security_group=default
image_id=debian-9-stretch-v20190514
flavor=n1-standard-1
frontend_nodes=1
compute_nodes=3
image_userdata=
ssh_to=frontend